<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScrollView_Keybrd_ScrollY_Bug_iOS.MainPage">

    <StackLayout Margin="30">
        <Label Text="ScrollView ScrollY value:"/>
        <Label Text="{Binding Source={x:Reference
                                      scrollView},
                      Path=ScrollY}"/>
        <ScrollView x:Name="scrollView">
            <Grid BackgroundColor="Red"
                  Padding="2">
                <Editor Text="Editor"/>
            </Grid>
        </ScrollView>
    </StackLayout>

</ContentPage>

